<Window x:Name="MyWindow" x:Class="MyMoney.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="628" Width="1725">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="1751*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button1" Content="Подключиться к BD" HorizontalAlignment="Left" Margin="1,10,0,0" VerticalAlignment="Top" Width="231" Click="Button_Click" Height="50" Grid.Column="1"/>
        <ListBox x:Name="listBox1" Margin="1,65,0,327" HorizontalAlignment="Left" Width="231" MouseLeftButtonUp="listBox1_MouseLeftButtonUp" Grid.Column="1"/>
        <ListBox x:Name="listBox2" Margin="1,0,0,50" HorizontalAlignment="Left" Width="231" Height="272" VerticalAlignment="Bottom" FontSize="10" FontFamily="Tekton Pro" Grid.Column="1" SelectionChanged="listBox2_SelectionChanged" SelectionMode="Extended"/>
        <Button Content="Запуск" Margin="237,0,0,50" Height="38" VerticalAlignment="Bottom" Grid.Column="1" HorizontalAlignment="Left" Width="243" Click="Button_Click_1"/>
        <TextBox x:Name="textBox1" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="237,10,0,0" TextWrapping="Wrap" Text="BP12800" VerticalAlignment="Top" Width="120"/>
        <CheckBox x:Name="checkBox1" Content="Подключение к серверу" Grid.Column="1" HorizontalAlignment="Left" Margin="237,47,0,0" VerticalAlignment="Top" Width="347"/>
        <PasswordBox x:Name="passBox1" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="439,10,0,0" VerticalAlignment="Top" Width="167" Password="8GVZ7Z"/>
        <TextBox x:Name="textBoxTable" Grid.Column="1" HorizontalAlignment="Left" Margin="237,68,0,0" TextWrapping="Wrap" Width="369" Height="67" VerticalAlignment="Top"/>
        <TextBox x:Name="tbThreadCount" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="539,140,0,0" TextWrapping="Wrap" Text="6" VerticalAlignment="Top" Width="67"/>
        <Label Content="Потоков:" Grid.Column="1" HorizontalAlignment="Left" Margin="474,140,0,0" VerticalAlignment="Top" Width="60" Height="23"/>
        <Label Content="Не учитывать если больше среднего (в ... раз):" Grid.Column="1" HorizontalAlignment="Left" Margin="237,168,0,0" VerticalAlignment="Top" Width="369"/>
        <TextBox x:Name="tbAverageStart" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="317,199,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="tbAverageFinish" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="419,199,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="70"/>
        <Label Content="Profit:" Grid.Column="1" HorizontalAlignment="Left" Margin="237,254,0,0" VerticalAlignment="Top" Width="82"/>
        <TextBox x:Name="tbProfitStart" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="317,256,0,0" TextWrapping="Wrap" Text="80" VerticalAlignment="Top" Width="70"/>
        <Label Content="Loss:" Grid.Column="1" HorizontalAlignment="Left" Margin="237,283,0,0" VerticalAlignment="Top" Width="82"/>
        <TextBox x:Name="tbProfitFinish" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="419,256,0,0" TextWrapping="Wrap" Text="200" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="tbLossStart" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="317,283,0,0" TextWrapping="Wrap" Text="80" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="tbLossFinish" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="419,283,0,0" TextWrapping="Wrap" Text="200" VerticalAlignment="Top" Width="70"/>
        <Label Content="Indicator:" Grid.Column="1" HorizontalAlignment="Left" Margin="237,313,0,0" VerticalAlignment="Top" Width="82"/>
        <TextBox x:Name="tbIndicatorStart" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="317,313,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="tbIndicatorFinish" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="419,313,0,0" TextWrapping="Wrap" Text="35" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="tbAverageStep" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="524,199,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="tbProfitStep" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="524,256,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="tbLossStep" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="524,283,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="tbIndicatorStep" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="524,313,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="70"/>
        <Label Content="Усредняться:" Grid.Column="1" HorizontalAlignment="Left" Margin="237,339,0,0" VerticalAlignment="Top" Width="82"/>
        <TextBox x:Name="tbMartingStart" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="317,339,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="tbMartingFinish" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="419,339,0,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="tbMartingStep" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="524,339,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="70"/>
        <ProgressBar x:Name="pbar1" Grid.Column="1" HorizontalAlignment="Left" Margin="4,0,0,33" Width="602" Height="12" VerticalAlignment="Bottom"/>
        <ProgressBar x:Name="pbar2" Grid.Column="1" HorizontalAlignment="Left" Margin="4,0,0,16" Width="602" Height="12" VerticalAlignment="Bottom"/>
        <Label x:Name="progressLabel" Content="- / -" Grid.Column="1" HorizontalAlignment="Left" Margin="524,0,0,50" Width="82" Height="26" VerticalAlignment="Bottom"/>
        <Label Content="glass:" Grid.Column="1" HorizontalAlignment="Left" Margin="237,226,0,0" VerticalAlignment="Top" Width="82"/>
        <TextBox x:Name="tbGlassStart" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="317,228,0,0" TextWrapping="Wrap" Text="30" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="tbGlassFinish" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="419,228,0,0" TextWrapping="Wrap" Text="50" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="tbGlassStep" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="524,228,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="70"/>
        <DataGrid x:Name="dgResult" Grid.Column="1" Margin="611,10,10,0" ColumnHeaderHeight="18" RowHeaderWidth="70" RowHeight="18" ColumnWidth="70" FontSize="9" HeadersVisibility="Column" Height="324" VerticalAlignment="Top">
            <DataGrid.AlternatingRowBackground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF9CFFA5" Offset="0"/>
                    <GradientStop Color="#FFADFDB5" Offset="1"/>
                </LinearGradientBrush>
            </DataGrid.AlternatingRowBackground>
            <DataGrid.RowBackground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF8FDFFD" Offset="0"/>
                    <GradientStop Color="#FF96C5E6" Offset="1"/>
                </LinearGradientBrush>
            </DataGrid.RowBackground>
        </DataGrid>

    </Grid>
</Window>
